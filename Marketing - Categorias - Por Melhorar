product_counts <- fact_dims %>%
  group_by(Category) %>%
  summarize(Unique_Products = n_distinct(ProductKey))
ggplot(product_counts, aes(x = "", y = Unique_Products, fill = Category)) +
  geom_bar(stat = "identity", width = 1) +
  coord_polar("y", start = 0) +
  labs(title = "Categorias dos Produtos",
       fill = "Categorias",
       x = NULL,
       y = NULL) +
  theme_void() +
  theme(legend.position = "right")
