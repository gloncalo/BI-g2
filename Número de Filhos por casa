## Número de Filhos por casa -----------------------------------------------

# Criar o gráfico lolipop com texto sobre cada bolinha
grafico_lolipop <- ggplot(dados_filhos, aes(x = reorder(factor(NumberChildrenAtHome), NumberChildrenAtHome), y = n)) +
    geom_point(color = "green", size = 5) +  # Aumenta o tamanho das bolas para 5
    geom_text(aes(label = n), vjust = -0.5, color = "black", size = 3, nudge_y = 10) +  # Move os números de clientes mais acima e reduz o espaço entre os números de filhos
    labs(
        title = "Número de Filhos em Casa dos Clientes",
        x = "Número de Filhos",
        y = "Número de Clientes"
    ) +
    scale_y_continuous(expand = expansion(mult = c(0.05, 0.05))) +  # Expandir o eixo y para que as bolas não fiquem cortadas
    theme_minimal() +
    theme(
        axis.text.x = element_text(angle = 45, hjust = 1)  # Rotaciona os rótulos do eixo x para melhor legibilidade
    )

# Mostrar o gráfico
print(grafico_lolipop)


